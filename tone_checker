from pydub import AudioSegment
from pydub.playback import play
import keyboard

def play_sound_repeat(file_path):
    sound = AudioSegment.from_file(file_path)
    while not keyboard.is_pressed(' '):
        play(sound)

play_sound_repeat(r"C:\\Users\\adamf\\PycharmProjects\\Visual Studio\IO project\InteractiveOrchestra\Gm_ViolinStraight_01_235_SP.wav")

